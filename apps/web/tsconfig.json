{
  "extends": "@ygtang/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"],
    },
    "types": [
      "@emotion/react/types/css-prop",
      "@ygtang/ui-styles/emotion-theme"
    ],
    "plugins": [
      {
        "name": "next",
      },
    ],
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "./.eslintrc.js",
    "./types/**/*.d.ts",
  ],
  "exclude": ["node_modules"],
}
